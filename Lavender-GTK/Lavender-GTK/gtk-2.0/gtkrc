# Based on Bridge by ScionicSpectre
# vim:set ts=2 sw=2 sts=2 ai et:
#
# This is the GTK+ 2 version of Adwaita. It's whole purpose is to look as the
# GTK+ 3 version as much as possible until GTK+ 2 dies completely.
#
# Note: comments for explaining styles are on the bottom of each file beside the
# widget matches.

# Declare the colours used throughout the theme.
# There shouldn't be any fiddling with them in the theme files themselves in
# order to not mess up the dark theme.

# Text/base
gtk-color-scheme = "text_color:white\nbase_color:#14141d"
# Foreground/background
gtk-color-scheme = "fg_color:#d3dae3\nbg_color:#14141d"
#Â Selected foreground/background
gtk-color-scheme = "selected_fg_color:#14141d\nselected_bg_color:#7171a8"
# Insensitive foreground/background
gtk-color-scheme = "insensitive_fg_color:#919494\ninsensitive_bg_color:#14141d"
# Menus
gtk-color-scheme = "menu_color:#1a1a26"
# Links
gtk-color-scheme = "link_color:#7171a8\nvisited_link_color:#99a7bc"
# Treeview headers
gtk-color-scheme = "column_header_color:#939595\nhover_column_header_color:#bcbdbc"
# Window decoration
gtk-color-scheme = "window_color:#14141d"
# Tooltips
gtk-color-scheme = "tooltip_fg_color:#d3dae3\ntooltip_bg_color:#1a1a26"

# Set GTK settings
gtk-auto-mnemonics              = 1
gtk-primary-button-warps-slider = 1

# And hand over the control to the theme files
include "main.rc"
include "apps.rc"
include "hacks.rc"
include "hacks-dark.rc"
